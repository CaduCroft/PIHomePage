<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Seu RelativeLayout "barra_de_bu" -->

    <View
        android:id="@+id/rectangle3"
        android:layout_width="339dp"
        android:layout_height="94dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#00619A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.819" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="332dp"
        android:layout_height="188dp"
        android:background="#FFFFFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="617dp"
        tools:srcCompat="@drawable/fundo_acessorios" />

    <RelativeLayout
        android:id="@+id/barra_de_bu"
        android:layout_width="258dp"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/barra_de_bu"
        android:elevation="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--<SearchView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />-->
        <SearchView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <!-- Seu RelativeLayout "avatar" -->

    <!-- Sua View "image" dentro de categorias -->
    <RelativeLayout
        android:id="@+id/avatar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="288dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/icone_loginn"
        android:elevation="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icone_loginn">

        <!-- Adicione outros componentes específicos do avatar aqui, se necessário -->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/categorias"
        android:layout_width="332dp"
        android:layout_height="77dp"
        android:layout_marginTop="112dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="11dp"
            tools:srcCompat="@drawable/icon_moda" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="33dp"
            tools:srcCompat="@drawable/icon_bijuterias" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginLeft="162dp"
            android:layout_marginTop="11dp"
            tools:srcCompat="@drawable/icon_produtos_naturais" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginLeft="234dp"
            android:layout_marginTop="11dp"
            tools:srcCompat="@drawable/icon_pet_shop" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginLeft="306dp"
            android:layout_marginTop="11dp"
            tools:srcCompat="@drawable/icon_auto_pecas" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="36dp"
            android:text="Bijuterias"
            android:textSize="10dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="36dp"
            android:text="Moda"
            android:textSize="10dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginLeft="162dp"
            android:layout_marginTop="36dp"
            android:text="Produtos Naturais"
            android:textSize="10dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginLeft="234dp"
            android:layout_marginTop="36dp"
            android:text="Pet Shop"
            android:textSize="10dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginLeft="306dp"
            android:layout_marginTop="36dp"
            android:text="Auto Peças"
            android:textSize="10dp"
            tools:ignore="TextSizeCheck" />

    </RelativeLayout>

    <!-- Sua View "rectangle" -->

    <View
        android:id="@+id/rectangle"
        android:layout_width="332dp"
        android:layout_height="82dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="654dp"
        android:background="#00619A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.297" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="259dp"
        android:layout_height="249dp"
        android:layout_marginTop="264dp"
        android:background="#FFFFFF"
        android:background="@drawable/fundo_moda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        style="@style/Button"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:text="Testar Site"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="453dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="60dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle"
        app:layout_constraintStart_toStartOf="@+id/rectangle"
        app:layout_constraintTop_toTopOf="@+id/rectangle"
        app:layout_constraintVertical_bias="0.538"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@drawable/logo_loja1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="208dp"
        android:layout_height="55dp"
        android:text="Kelci Barbosa
                            Modelo Rubi Claro - Plano Completo"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle"
        app:layout_constraintEnd_toEndOf="@+id/rectangle"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/rectangle"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="60dp"
        android:layout_height="56dp"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/rectangle3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="549dp"
        tools:srcCompat="@drawable/logo_loja2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="208dp"
        android:layout_height="55dp"
        android:text="Skyrise
                                    Modelo Rubi - Plano Básico"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/rectangle3"
        app:layout_constraintTop_toTopOf="@+id/rectangle3"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>


